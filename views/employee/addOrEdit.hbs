<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Full Name" value="{{employee.Name}}">
        <div class="text-danger">
            {{employee.NameError}}</div>
    </div>

    <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" name="Age" placeholder="Age" value="{{employee.Age}}">
        <div class="text-danger">
            {{employee.AgeError}}</div>
    </div>

   <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="Email" placeholder="Email" value="{{employee.Email}}">
        <div class="text-danger">
            {{employee.EmailError}}</div>
    </div> 

    <div class="form-group">
        <label>Gender</label>
        <input type="text" class="form-control" name="Gender" placeholder="F or M" value="{{employee.Gender}}" style="text-transform:uppercase">
        <div class="text-danger">
            {{employee.GenderError}}</div>
    </div>

    <div class="form-group">
        <label>Mobile</label>
        <input type="number" class="form-control" name="Mobile" placeholder="Mobile" value="{{employee.Mobile}}">
        <div class="text-danger">
            {{employee.MobileError}}</div>
    </div>
 
    <div class="form-group">
        <label>Birthday</label>
        <input type="text" class="form-control" name="Birthday" placeholder="Birthday" value="{{employee.Birthday}}">
        <div class="text-danger">
            {{employee.BirthdayError}}</div>
    </div>

    <div class="form-group">
        <label>City</label>
        <input type="text" class="form-control" name="City" placeholder="City" value="{{employee.City}}">
        <div class="text-danger">
            {{employee.CityError}}</div>
    </div>

    <div class="form-group">
        <label>State</label>
        <input type="text" class="form-control" name="State" placeholder="State" value="{{employee.State}}">
        <div class="text-danger">
            {{employee.StateError}}</div>
    </div>

    <div class="form-group">
        <label>Country</label>
        <input type="text" class="form-control" name="Country" placeholder="Country" value="{{employee.Country}}">
        <div class="text-danger">
            {{employee.CountryError}}</div>
    </div>

    <div class="form-group">
        <label>Address1</label>
        <input type="text" class="form-control" name="Address1" placeholder="Address1" value="{{employee.Address1}}">
        <div class="text-danger">
            {{employee.Address1Error}}</div>
    </div>

    <div class="form-group">
        <label>Address2</label>
        <input type="text" class="form-control" name="Address2" placeholder="Address2" value="{{employee.Address2}}">
        <div class="text-danger">
            {{employee.Address2Error}}</div>
    </div>
